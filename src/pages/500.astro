---
interface Props {
  error: unknown;
}

const errorMessage = "An unexpected error occurred";

import { SITE_TITLE } from "../consts";
import AppLayout from "../layouts/app/AppLayout.astro";
import PageLayout from "../layouts/PageLayout.astro";
---

<AppLayout title={`${SITE_TITLE} - Server Error`}>
    <PageLayout>
        <div class="flex flex-col items-center justify-center py-16 text-center">
            <h1 class="font-bold text-6xl mb-4 text-black dark:text-white">500</h1>
            <h2 class="font-semibold text-2xl mb-6 text-zinc-800 dark:text-zinc-200">Server Error</h2>
            <p class="text-zinc-600 dark:text-zinc-400 mb-8">
                {errorMessage}
            </p>
            <a 
                href="/" 
                class="px-4 py-2 rounded-lg bg-zinc-200 dark:bg-zinc-800 text-zinc-800 dark:text-zinc-200 hover:bg-zinc-300 dark:hover:bg-zinc-700 transition-colors duration-300"
            >
                Return Home
            </a>
        </div>
    </PageLayout>
</AppLayout>