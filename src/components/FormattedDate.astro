---
import { formatArticleDate, formatPostDate } from "../lib/utils";

interface Props {
    date: Date;
    format?: "article" | "post";
}

const { date, format = "article" } = Astro.props;

const formattedDate = format === "article" 
    ? formatArticleDate(date)
    : formatPostDate(date);
---

<time datetime={date.toISOString()}>
    {formattedDate}
</time>
