---
import Tidal from "../../components/tidal/Tidal.astro";
import TimeDisplay from "../../components/time/TimeDisplay.astro";
import TidalFallback from "../../components/tidal/TidalFallback.astro";
---

<footer class="flex flex-col items-center w-full">
    <div class="flex flex-col w-full max-w-2xl px-4 md:px-8 mb-4">
        <hr class="w-full border-1 border-zinc-200 dark:border-zinc-800 mb-4" />
        <div class="flex flex-col md:flex-row md:justify-between items-center w-full">
            <div class="w-full md:w-auto">
                <Tidal server:defer>
                    <TidalFallback slot="fallback" />
                </Tidal>
            </div>
            <div class="w-full md:w-auto">
                <TimeDisplay />
            </div>
        </div>
    </div>
</footer>
